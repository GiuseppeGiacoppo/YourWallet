<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:layout_centerVertical="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_normal">

    <View
        android:id="@+id/transaction_categoryColor"
        android:layout_width="8dp"
        android:layout_height="@dimen/list_item_height"
        android:background="#ff0000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/transaction_dowTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/app_text_size_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/transaction_dayTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="@dimen/app_text_size_medium" />

            <TextView
                android:id="@+id/transaction_monthTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/01"
                android:textColor="@android:color/secondary_text_light" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:orientation="vertical"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/transaction_noteTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuova Nota"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/app_text_size_medium" />

        <TextView
            android:id="@+id/transaction_accountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risparmi"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/app_text_size_small" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/transaction_amountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:text="15 â‚¬"
        android:textSize="@dimen/app_text_size_large"/>
</LinearLayout>