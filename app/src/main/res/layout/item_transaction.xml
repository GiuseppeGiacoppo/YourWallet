<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemListHeight"
    android:layout_centerVertical="true"
    android:orientation="horizontal">

    <View
        android:id="@+id/llbgcat"
        android:layout_width="8dp"
        android:layout_height="@dimen/itemListHeight"
        android:layout_marginLeft="@dimen/itemListHorizontalMargin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/itemListHorizontalMargin"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tvgiorno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/itemListSecondaryText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="@dimen/itemListPrimaryTextBig" />

            <TextView
                android:id="@+id/tvmese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/01"
                android:textColor="@android:color/secondary_text_light" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/itemListHorizontalMarginBig"
        android:orientation="vertical"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/tvnota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuova Nota"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/itemListPrimaryText" />

        <TextView
            android:id="@+id/tvconto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risparmi"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/itemListSecondaryText" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvimporto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:text="15 â‚¬"
        android:textSize="@dimen/itemListPrimaryText"
        android:layout_marginRight="@dimen/itemListHorizontalMargin"/>
</LinearLayout>